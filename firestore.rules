
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the foundation of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Checks if the currently authenticated user has the 'staff' role.
     * It reads the user's own profile from the /users collection to check their role.
     */
    function isStaff() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff';
    }

    /**
     * Returns true if the document being accessed belongs to a user with the 'client' role.
     */
    function isClient(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.role == 'client';
    }
    
    /**
     * Validates that the incoming data for an order has the correct structure and ownership.
     */
    function isValidOrder() {
      let incomingData = request.resource.data;
      return isOwner(incomingData.client.id) &&
             incomingData.outletId is string &&
             incomingData.totalAmountInr is number &&
             incomingData.status == 'pending' &&
             incomingData.createdAt == request.time && // Ensure server timestamp is used
             incomingData.items is list && incomingData.items.size() > 0;
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    /**
     * @description Stores user profiles.
     * @path /users/{userId}
     * @allow (create) Any user can create their own profile document (e.g., during sign-up).
     * @allow (get, update) A user can read or update their own profile.
     * @allow (get, list) A staff member can read/list the profiles of any client.
     * @deny (delete) No one can delete a user profile from the client.
     */
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get, update: if isOwner(userId);
      // Staff can read profiles of users who are clients
      allow get: if isStaff() && isClient(userId); 
      // Staff can list users, which will be filtered on the client-side to show only 'client' roles.
      allow list: if isStaff();
      
      allow delete: if false; // Prevent client-side deletion of user profiles
    }

    /**
     * @description Stores public information about outlets. Readable by anyone, writable only by staff.
     * @path /outlets/{outletId}
     */
    match /outlets/{outletId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff();
    }

    /**
     * @description Stores public information about menu items. Readable by anyone, writable only by staff.
     * @path /menu_items/{menuItemId}
     */
    match /menu_items/{menuItemId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff();
    }
    
    /**
     * @description Stores orders.
     * @path /orders/{orderId}
     * @allow (create) A client can create their own order with valid data.
     * @allow (get, list) A client can read their own orders.
     * @allow (get, list, update) A staff member can read, list, and update any order.
     */
    match /orders/{orderId} {
      allow create: if isValidOrder();
      allow get, list: if (isOwner(resource.data.client.id) || isStaff());
      allow update: if isStaff(); // Only staff can update order status
    }

    /**
     * @description Stores counters for generating sequential token numbers per outlet.
     * @path /counters/{outletId}
     * @allow (get, update) Authenticated users can read and update counters, typically within a transaction.
     */
     match /counters/{outletId} {
        allow get, update: if isSignedIn();
     }
  }
}
