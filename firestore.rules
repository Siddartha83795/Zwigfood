
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the foundation of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Checks if the currently authenticated user has the 'staff' role
     * by reading the role from their user profile document.
     */
    function isStaff() {
      // Check for the existence of the user document before accessing its data.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff';
    }
    
    /**
     * Validates that the incoming data for an order has the correct structure and ownership.
     */
    function isValidOrder() {
      let incomingData = request.resource.data;
      // Ensure the client ID in the order data matches the person creating it.
      return isSignedIn() &&
             isOwner(incomingData.client.id) &&
             incomingData.outletId is string &&
             incomingData.totalAmountInr is number &&
             incomingData.status == 'pending' &&
             incomingData.items is list && incomingData.items.size() > 0 &&
             request.resource.data.createdAt == request.time;
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    /**
     * @description Stores user profiles.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      
      // A user can read/update their own profile. Staff can also read any user profile.
      allow read, update: if isOwner(userId) || isStaff();

      // Only staff can list all users.
      allow list: if isStaff();
      
      // Nobody can delete user profiles for now.
      allow delete: if false; 
    }

    /**
     * @description Stores public information about outlets. Readable by anyone, writable only by staff.
     * @path /outlets/{outletId}
     */
    match /outlets/{outletId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff();
    }

    /**
     * @description Stores public information about menu items. Readable by anyone, writable only by staff.
     * @path /menu_items/{menuItemId}
     */
    match /menu_items/{menuItemId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff();
    }
    
    /**
     * @description Stores orders.
     * @path /orders/{orderId}
     */
    match /orders/{orderId} {
      // Any authenticated user can create an order, provided it's valid.
      allow create: if isValidOrder();

      // Users can read their own orders. Staff can read all orders.
      // This rule is checked on each document returned by a client's filtered query.
      allow read: if isOwner(resource.data.client.id) || isStaff();
      
      // Only staff can list all orders. Clients CANNOT list all orders.
      // Their queries must be filtered, which then relies on the 'read' rule above.
      allow list: if isStaff();

      // Only staff can update order status. Clients can cancel their own 'pending' orders.
      allow update: if isStaff() || (isOwner(resource.data.client.id) && request.resource.data.status == 'cancelled' && resource.data.status == 'pending');
      
      // No one can delete orders for now.
      allow delete: if false;
    }

    /**
     * @description Stores counters for generating sequential token numbers per outlet.
     * @path /counters/{outletId}
     */
     match /counters/{outletId} {
        // Only staff should be able to manage counters.
        allow read, write: if isStaff();
     }
  }
}
