
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the foundation of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Checks if the currently authenticated user has the 'staff' role.
     * It reads the user's own profile from the /users collection to check their role.
     */
    function isStaff() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff';
    }

    /**
     * Returns true if the document being accessed belongs to a user with the 'client' role.
     */
    function isClient(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'client';
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    /**
     * @description Stores user profiles.
     * @path /users/{userId}
     * @allow (get, update) A user can read or update their own profile.
     * @allow (create) Any user can create their own profile document (e.g., during sign-up).
     * @allow (get) A staff member can read the profile of any client.
     * @allow (list) A staff member can list all client profiles.
     * @deny (delete) No one can delete a user profile from the client.
     */
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get, update: if isOwner(userId);
      // Staff can read profiles of users who are clients
      allow get: if isStaff() && isClient(userId); 
      // Staff can list users, which will be filtered on the client-side to show only 'client' roles.
      // A secure list requires checking the role on each document.
      allow list: if isStaff();
      
      allow delete: if false; // Prevent client-side deletion of user profiles
    }

    /**
     * @description Stores public information about outlets. Readable by anyone, writable only by staff.
     * @path /outlets/{outletId}
     */
    match /outlets/{outletId} {
      allow get, list: if true;
      allow create, update, delete: if isStaff();
    }

    /**
     * @description Stores public information about menu items. Readable by anyone, writable only by staff.
     * @path /menu_items/{menuItemId}
     */
    match /menu_items/{menuItemId} {
      allow get, list: if true;
      allow create, update, delete: if isStaff();
    }
    
    /**
     * @description Stores orders. Clients can create and read their own. Staff can read all.
     * @path /orders/{orderId}
     */
    match /orders/{orderId} {
      allow create: if isOwner(request.resource.data.clientId);
      allow get, list: if isOwner(resource.data.clientId) || isStaff();
      allow update: if isStaff(); // Only staff can update order status
    }
  }
}
